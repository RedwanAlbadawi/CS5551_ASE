doctype html
html
    head
        title Lab 9
        link(rel="stylesheet" href="/css/styles.css")
        script(src="/js/script.js")
        link(rel='stylesheet', href='/css/bootstrap.min.css')

    body
        form(#loginform='ngForm', (ngsubmit)='loginEvent(LoginForm.value)')
            .panel.primary-panel
                .panel-heading
                    h2.panel-title Login
                .panel-body
                    .form-group
                        label Email Address:
                        input.form-control(type='text', required, name='email', ngmodel='email', placeholder='Email')
            .panel.primary-panel
                .form-group
                    label Password:
                    input.form-control(required, type='password', name='password', ngmodel='password', placeholder='password')
            .panel.primary-panel
                button.btn.btn-primary(type='button', onclick="login()") Login
